<li>
    
    <p> 
        <%= ques.content %>
        <br>
        <small>
            <%= ques.user.name %>
        </small>
    </p>
    
    <% if(locals.user && locals.user.id==ques.user.id){%>
        <a class ="delete_question_btn" href="/question/delete/<%= ques.id %>"><b>Delete</b></a>
    <%}%>

    <% if(locals.user){ %>
        <form action="answer/create" method="POST">
            <textarea name="content" cols="30" rows="3" placeholder="Type your answer here..." required></textarea>
            <input type="hidden" name="question_id" value="<%= ques._id %>">
            <input type="submit" value="submit">
        </form>
    <%}%>
    

    <ul>
        <% for(ans of ques.answers){%>
            <%- include('_answer'); %>
        <%}%>
    </ul>
</li>
